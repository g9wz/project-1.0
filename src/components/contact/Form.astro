---
import SendButton from "./SendButton.astro";
---

<form
  name="Contact Us"
  method="POST"
  data-netlify="true"
  autocomplete="on"
  class="mt-8 w-full md:ml-auto md:mt-0 md:w-1/2 md:py-8 lg:w-1/3"
>
  <h2 class="mb-1 text-4xl font-bold">Contact Us ðŸ“©</h2>
  <p class="mb-5 text-xl leading-relaxed dark:text-dimWhite">
    Feel Free to Reach Out to Us!
  </p>
  <!-- Name Input -->
  <div class="relative mb-4 text-left">
    <label for="name" class="text-lg leading-8">Name:</label>
    <input
      id="name"
      type="text"
      name="name"
      required
      autocomplete="on"
      autocapitalize="words"
      class="contactInput"
    />
  </div>
  <!-- Email Input -->
  <div class="relative mb-4 text-left">
    <label for="email" class="text-lg leading-8">Email:</label>
    <input
      id="email"
      type="email"
      name="email"
      required
      autocomplete="on"
      class="contactInput"
    />
  </div>
  <!-- Text Area -->
  <div class="relative mb-4 text-left">
    <label for="message" class="text-lg leading-8">Message:</label>
    <textarea
      id="message"
      name="message"
      required
      autocomplete="off"
      class="contactInput h-32 resize-none leading-6"></textarea>
  </div>
  <SendButton />
  <p class="mt-3 text-xs text-gray-500">the button actually works ðŸ˜Š</p>
</form>

<style>
  .contactInput {
    @apply w-full rounded-lg border border-gray-300 px-3 py-1 leading-8 text-neutral-900 outline-none transition duration-300 ease-in-out focus:ring-2 focus:ring-twitterBlue;
  }
</style>
